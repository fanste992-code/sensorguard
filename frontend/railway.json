{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd frontend && npx serve -s dist -l $PORT"
  }
}
